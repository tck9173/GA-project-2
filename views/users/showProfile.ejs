<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title></title>
        <link rel="stylesheet" href="/css/app.css">
    </head>
    <body>
            <div id="profileHeader">
            <div id= "showUserName">
                <h1>Welcome to <%=user.name%>'s Farm! </h1>
            </div>
            

            <div id="userInfo">
                Name: <%=user.name%></br>
                Username: <%=user.username%></br>
            </div>
        </div>
        
        
        <div id="profile_wrapper">

            

            <div id="farmWrapper">
                <div id= "house">    
                <img src="https://stardewvalleywiki.com/mediawiki/images/3/30/House_%28tier_1%29.png" alt="farm">
                    <br><br>
                </div>
                
                <div id = crops>
                <h4>List of <%=user.name%>'s crops</h4>
                <div id="cropWrapper">
                    <% for (let i=0; i<user.Crops.length; i++) { %>
                        <li>
                            <a href='/crops/<%=user.Crops[i].id%>'><%=user.Crops[i].name%> <%=user.Crops[i].quality%></a>
                        </li>
                        </br>
                    <% } %>
                </div>
                </div>
                <br><br>
                
            </div>
            

            <div id="middle"></div>

            <div id="gifting">                
                <div class = "friendsWrapper">
                    <div><h4>People <%=user.name%> has given gifts to.</h4></div>
                    <div class = "friends">
                    <% for (let i=0; i<user.Friends.length; i++) { %>
                            <a href='/users/showprofile/<%=user.Friends[i].id%>'><%=user.Friends[i].name%> <%=user.Friends[i].Friend.relationship%></a>
                    <% } %>
                    </div>
                </div>

                <div class = "friendsWrapper">
                    <div><h4>People that have given <%=user.name%> gifts.</h4></div>
                    <div class = "friends">
                    <% for (let i=0; i<user.Friends.length; i++) { %>
                            <a href='/users/showprofile/<%=user.Friends[i].id%>'><%=user.Friends[i].name%></a>
                    <% } %>
                    </div>
                </div>
            </div>
            

        </div>
        <footer>
            <nav>
                <a href="/users/signup">Sign Up</a>
                <a href="/users/login">Log In</a>
                <a href="/users">Take me to HomePage</a>
                <a href="/friends/<%=user.id%>">Give Gifts</a>
            </nav>
        </footer>
    </body>
</html>